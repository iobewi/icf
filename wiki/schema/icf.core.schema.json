{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/iobewi/icf/main/doc/schema/icf.core.schema.json",
  "title": "ICF Capsule \u2014 Core (decoded, app-facing)",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "format": "uri",
      "maxLength": 200
    },
    "language": {
      "type": "string",
      "pattern": "^[a-zA-Z]{2}$"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "pedagogical_tag": {
      "type": "object",
      "properties": {
        "cycle": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255
        },
        "subject": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255
        },
        "subclass": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255
        }
      },
      "required": [
        "cycle",
        "subject"
      ],
      "additionalProperties": false
    },
    "retention_days": {
      "type": "integer",
      "minimum": 0,
      "maximum": 255
    },
    "expires_at": {
      "type": "integer",
      "minimum": 0
    },
    "badge_type": {
      "type": "integer",
      "minimum": 0,
      "maximum": 2
    },
    "system_payload": {
      "type": "string",
      "contentEncoding": "base64"
    }
  },
  "allOf": [
    {
      "anyOf": [
        {
          "required": [
            "title"
          ]
        },
        {
          "required": [
            "url"
          ]
        }
      ]
    }
  ],
  "additionalProperties": false
}